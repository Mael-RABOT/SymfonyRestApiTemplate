# Symfony Application Environment
APP_ENV=prod
APP_SECRET=<secret>

# Database Configuration (External MariaDB on VPS)
DATABASE_URL="mysql://<db_user>:<db_pssw>@127.0.0.1:3306/<db_name>?serverVersion=10.11&charset=utf8"
MYSQL_VERSION=10.11
MYSQL_DATABASE=<db_name>
MYSQL_USER=<db_user>
MYSQL_PASSWORD=<db_pssw>
MYSQL_ROOT_PASSWORD=<root_pssw>

# JWT Authentication
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=<secret>

# CORS Configuration
CORS_ALLOW_ORIGIN='^https?://(<project>\.api\.<domain>\.com|www\.<domain>\.com|<domain>\.com)$'

# Optional: Redis for caching (if you want to add it later)
# REDIS_URL=redis://localhost:6379

# Optional: Mailer configuration
# MAILER_DSN=smtp://localhost:1025
